<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Request</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

    <div class="container">
        <div class="row h-100">
          <div class="col-lg-4"><!-- this is just here to center the next column --></div>

          <div class="col-lg-4 text-center my-auto">
            <% if (c) { %>

              <p>
                Class: <b><%= c.name %></b>
              </p>
              <p>
                Subclasses: <b><%= c.subclass %></b>
              </p>

            <% } else { %>

              <p>An error occurred: there is no class named "<%= requestedClass %>"</p>

            <% } %>

              <p>
                <a href="/allWastes">See all wastes</a>                    
              </p>
              <p>
                <a href="/allClasses">See all classes</a>                    
              </p>
              <p>
                <a href="/public/wasteform.html">Create a new waste</a>                    
              </p>
              <p>
                <a href="/public/classform.html">Create a new class</a>                    
              </p>
          </div>

          <div class="col-lg-4"><!-- this is just here to center the previous column --></div>

        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>


