<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View All Classes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <script type="text/javascript">
      <!--
      function confirmDelete(name) {
        var answer = confirm("Are sure you want to delete " + name + "?")
        if (answer){
          window.location = "/deleteRequest?name=" + name;
        }
      }
      //-->
      </script>
  </head>
  <body>

    <div class="container">
      <div class="row h-100">
        <div class="col-lg-4"><!-- this is just here to center the next column --></div>
        <div class="col-lg-4 text-center my-auto">
            <% if (requests && requests.length > 0) { %>
              <p>
              Here are all the requests raised by the users:
              </p>
              <p>
              <table class="table table-bordered">
                <% requests.forEach( (r) => { %>
                  <tr>      
                    <td>Requests: <b><%= r.name %></b></td> 
                    <td><a href="/viewRequest?name=<%= r.name %>">View</a></td> 
                    <td><a href="/approveRequest?name=<%= r.name %>&category=<%= r.category %>&nodes=<%= r.nodes %>">Approve</a></td> 
                    <td><a href="javascript:confirmDelete('<%= r.name %>')">Reject/Delete</a></td>
                    
                  </tr>                      
                <% }) %>
              </table>
              </p>
            <% } else { %>
              <p>There are no requests raised by the users.</p>
            <% } %>
          <p>
            <a href="/public/requestform.html">Create a new Request</a>
          </p>
          <p>
            <a href="/allWastes">See all wastes</a>                    
          </p>
        </div>

        <div class="col-lg-4"><!-- this is just here to center the previous column --></div>
      </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>


